<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">


        <!--Primary Color -->

    </style>


    <!--Style Barre nav bas-->
    <style name="Style_top" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/purpleBordeaux</item>
        <item name="android:buttonStyle">@color/ghostGreenBis</item>


    </style>

    <style name="Style_bottom" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/purpleBordeaux</item>
        <item name="itemIconSize">40dp</item>
        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">8dp</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemIconTint">@color/ghostGreenBis</item>
    </style>

    <style name="Style_top_home_toolbar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:iconTint">@color/ghostGreenBis</item>
        <item name="android:background">@color/purpleBordeaux</item>
        <item name="itemIconSize">40dp</item>
        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">8dp</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="Button_round" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/purpleBordeaux</item>
        <item name="android:radius">15dp</item>

    </style>

    <style name="ImageButton" parent="Widget.AppCompat.Button">
        <item name="iconSize">40dp</item>
        <item name="android:background">#00000000</item>
        <item name="iconTint">@color/ghostGreenBis</item>
    </style>

    <style name="Membre_img" parent="CardView">
        <item name="iconSize">40dp</item>
        <item name="iconTint">@color/bordeaux_pale</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardBackgroundColor">@color/ghostCoral</item>

    </style>

    <style name="sendMessageBtn" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/bordeaux_pale</item>
        <item name="android:paddingTop">5dp</item>
    </style>


    <style name="SendedMessage">
        <item name="android:background">@color/ghostGreen</item>
        <item name="android:radius">15dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>