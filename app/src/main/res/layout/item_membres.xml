<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@drawable/rectangle_circle"
              android:padding="16dp">

    <!-- Nom de l'activité -->

    <!-- Emplacement de l'activité -->
    <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/ghostGreen"
            app:cardCornerRadius="10dp">

        <LinearLayout
                android:gravity="center"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="100dp"
                    android:id="@+id/idMembre"

                    android:layout_height="100dp">

            </ImageView>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                <LinearLayout

                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="Nom"
                            android:textSize="25sp"
                            android:id="@+id/text_name"
                            android:layout_marginRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                            android:text="Surname"
                            android:textSize="20sp"
                            android:id="@+id/text_surname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
                <LinearLayout

                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="Vannes"
                            android:id="@+id/text_location"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                            android:text="24"
                            android:id="@+id/text_age"
                            android:textSize="15dp"
                            android:gravity="end"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>

                <TextView
                        android:text="Bombarde"
                        android:id="@+id/text_passion"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                </TextView>


            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>