<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content" android:layout_height="match_parent">

    <!--Barre du haut-->
    <TableLayout
            android:layout_width="match_parent"
            android:id="@+id/top_nav"
            android:layout_height="wrap_content">

        <TableRow>
            <!--Cellule 1-->
            <LinearLayout>
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal"
            <Button
                    android:id="@+id/nav_rechercher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:text="rechercher"/>
            </LinearLayout>
            <!--Cellule 2-->
            <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

            <!--Cellule 3-->
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"
                    android:padding="5dp">

                <Button
                        android:layout_width="wrap_content"
                        android:id="@+id/nav_notification"
                        android:text="notif"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round"/>

                <Button
                        android:layout_width="wrap_content"
                        android:id="@+id/nav_parametres"
                        android:text="para"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round"/>

            </LinearLayout>
        </TableRow>

        <!-- Ajoutez d'autres lignes au besoin -->

    </TableLayout>


    <!--Ecran au milieu. C'est ici que va Ãªtre contenu toutes les pages de l'appli
    c'est un fragment-->
    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_above="@id/bottom_nav"
                 android:layout_below="@id/top_nav"
                 android:id="@+id/container_view"/>


    <!--Barre du bas-->
    <com.google.android.material.bottomnavigation.BottomNavigationView android:layout_width="match_parent"
                                                                       android:layout_height="wrap_content"
                                                                       android:id="@+id/bottom_nav"
                                                                       app:menu="@menu/bottom_menu"
                                                                       style="@style/Style_bottom"
                                                                       android:layout_alignParentBottom="true"/>

</RelativeLayout>